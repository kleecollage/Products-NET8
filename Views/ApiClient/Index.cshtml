@model IEnumerable<Web.Models.Categoria>
@{
  ViewData["Title"] = "API Client";
}

<div class="text-center">
  <h1>API Client</h1>
  <div>
    <p class="d-flex justify-content-end" >
      <a asp-action="Add" asp-controller="apiClient" class="btn btn-success">
        <i class="fas fa-plus"></i> Add
      </a>
    </p>
  </div>
  <div class="row">
    .<div class="table-responsive">
      <table class="table table-dark table-bordered table-hover table-striped" >
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Slug</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          @foreach(var data in Model)
          {
            <tr>
              <td scope="row">@Html.DisplayFor(m => data.Id)</td>
              <td>@Html.DisplayFor(m => data.Nombre)</td>
              <td>@Html.DisplayFor(m => data.Slug)</td>
              <td>
                <a asp-action="Edit" asp-controller="apiClient" asp-route-id="@data.Id">
                  <i class="fas fa-edit"></i> Edit
                </a>
                <a href="#"
                  onclick="confirmSweet('Do you really want to delete this record?','/api-client/delete/@data.Id'); return false;" >
                  <i class="fas fa-trash-alt"></i> Delete
                </a>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>

  </div>
</div>
